#!/usr/bin/env bash
set -e
if [[ ! -d "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier/.envrc" "/home/leniviy/code/university/study/Course_2/backend/Course_work/movifier/.direnv"/*.rc
